<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/searchActivity"
    tools:context="com.example.final_project_client.Presentation.Search.SearchActivity"
    android:layoutDirection="rtl">
<ScrollView
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_above="@id/ChangeSetOfCategories">

    <LinearLayout
        android:id="@+id/linearLayout_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/level1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </FrameLayout>
        <FrameLayout
            android:id="@+id/level2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
        </FrameLayout>
        <FrameLayout
            android:id="@+id/level3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
        </FrameLayout>
        <FrameLayout
            android:id="@+id/level4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
        </FrameLayout>
        <FrameLayout
            android:id="@+id/level5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </FrameLayout>
        <FrameLayout
            android:id="@+id/level6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
        </FrameLayout>
        <FrameLayout
            android:id="@+id/level7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
        </FrameLayout>
        <FrameLayout
            android:id="@+id/level8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
        </FrameLayout>
        <FrameLayout
            android:id="@+id/level9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
        </FrameLayout>
        <FrameLayout
            android:id="@+id/level10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
        </FrameLayout>
        <FrameLayout
            android:id="@+id/level11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
        </FrameLayout>
        <FrameLayout
            android:id="@+id/level12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
        </FrameLayout>
        <FrameLayout
            android:id="@+id/level13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </FrameLayout>
    </LinearLayout>
</ScrollView>
    <LinearLayout
        android:id="@+id/ChangeSetOfCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@id/BtnSearch"
        >

        <Button
            android:id="@+id/BtnAddCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="clickOnBtnAddCategory"
            android:text="@string/addCategory"
           />
        <Button
            android:id="@+id/BtnRemoveCategory"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:onClick="clickOnBtnRemoveCategory"
            android:layout_height="wrap_content"
            android:text="@string/RemoveCategory"
            />

    </LinearLayout>

    <Button
        android:id="@+id/BtnSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="openResultsActivity"
        android:layout_alignParentBottom="true"
        android:text="@string/search"
     />

</RelativeLayout>
